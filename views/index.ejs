<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ask Me ðŸ’¬</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0;
            padding: 20px;
        }
        #chat {
            width: 400px;
            height: 500px;
            border: 1px solid #ccc;
            overflow-y: auto;
            padding: 10px;
            margin-bottom: 10px;
        }
        .user-message, .ai-message {
            margin: 10px 0;
        }
        .user-message {
            text-align: right;
            color: blue;
        }
        .ai-message {
            text-align: left;
            color: black;
        }
    </style>
</head>
<body>
    <h1>Ask Me ðŸ’¬</h1>
    <div id="chat"></div>
    <form id="queryForm">
        <input type="text" id="prompt" placeholder="Enter your query..." required>
        <button type="submit">Send</button>
    </form>
    <script>
        const chatDiv = document.getElementById('chat');
        const form = document.getElementById('queryForm');

        form.onsubmit = async (e) => {
            e.preventDefault();
            const prompt = document.getElementById('prompt').value;

            // Display user message
            chatDiv.innerHTML += `<div class="user-message">${prompt}</div>`;
            document.getElementById('prompt').value = ''; // Clear input field

            try {
                const response = await fetch('/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ prompt })
                });
                const data = await response.json();
                // Display AI response
                chatDiv.innerHTML += `<div class="ai-message">${data.text}</div>`;
                chatDiv.scrollTop = chatDiv.scrollHeight; // Scroll to bottom
            } catch (error) {
                console.error('Error fetching response:', error);
            }
        };
    </script>
</body>
</html>
